{
  "routes": [
    {
      "$comment": "ログイン用のURI",
      "route": "/login",
      "rewrite": "/.auth/login/aad",
      "allowedRoles": [
        "authenticated"
      ]
    },
    {
      "$comment": "ログアウト用のURI",
      "route": "/logout",
      "rewrite": "/.auth/logout",
      "allowedRoles": [
        "authenticated"
      ]
    },
    {
      "$comment": "アクセスには認証必要",
      "route": "/*",
      "allowedRoles": [
        "authenticated"
      ]
    }
  ],
  "responseOverrides": {
    "401": {
      "$comment": "認証していない場合はログインURIに転送",
      "statusCode": 302,
      "redirect": "/login"
    }
  }
}