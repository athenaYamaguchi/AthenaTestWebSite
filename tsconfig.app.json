{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts", 
    "src/**/*", 
    "src/**/*.vue",
    "src/**/*.ts",
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "types": ["vite/client"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "jsx": "preserve",
    "isolatedModules": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
